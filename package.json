{
    "name": "@bryan-debaun/mcp-server",
    "version": "0.1.0",
    "description": "Extensible MCP server for VS Code Copilot with GitHub Issues tools",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "prisma generate && npm run build:spec && tsc && npm run build:seed",
        "build:spec": "tsoa spec-and-routes && tsx scripts/fix-tsoa-imports.ts",
        "build:seed": "tsc prisma/seed.ts --outDir dist --module ES2022 --target ES2022 --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --resolveJsonModule --skipLibCheck",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "start:http": "cross-env MCP_TRANSPORT=http node dist/index.js",
        "mcp-proxy": "tsx scripts/mcp-proxy.ts",
        "check-spotify": "tsx scripts/check-spotify.ts",
        "sql:parse": "tsx scripts/find-sql-error.ts prisma/migrations/20260202110000_enable_rls/migration.sql --dry-run",
        "sql:validate": "tsx scripts/find-sql-error.ts prisma/migrations/20260202110000_enable_rls/migration.sql --apply",
        "sql:exec": "tsx scripts/exec-sql-pg.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc -p tsconfig.test.json --noEmit",
        "lint": "eslint src/**/*.ts test/**/*.ts --ext .ts",
        "lint:fix": "eslint src/**/*.ts test/**/*.ts --ext .ts --fix",
        "verify": "npm run lint && npm run typecheck",
        "prisma:dev": "prisma db push && prisma generate",
        "prisma:seed": "node dist/seed.js",
        "prisma:seed:dev": "tsx prisma/seed.ts",
        "prisma:generate": "prisma generate",
        "backfill:books": "tsx scripts/ops/backfill-book-aggregates.ts",
        "backfill:books:dry-run": "tsx scripts/ops/backfill-book-aggregates.ts --dry-run",
        "backfill:books:force": "tsx scripts/ops/backfill-book-aggregates.ts --force --confirm-token=REALLY_I_AGREE",
        "ops:smoke": "tsx scripts/ops/smoke-check-aggregates.ts",
        "ops:smoke:force": "CONFIRM=REALLY_I_AGREE tsx scripts/ops/smoke-check-aggregates.ts --force",
        "ops:sql-backfill": "tsx scripts/ops/sql-backfill-aggregates.ts",
        "ops:sql-backfill:force": "CONFIRM=REALLY_I_AGREE tsx scripts/ops/sql-backfill-aggregates.ts --force"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "vscode",
        "copilot",
        "github"
    ],
    "author": "bryan-debaun",
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@octokit/graphql": "^9.0.3",
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "@tsoa/runtime": "^7.0.0-alpha.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "jose": "^6.1.3",
        "pg": "^8.11.3",
        "prom-client": "^14.0.0",
        "swagger-ui-express": "^5.0.1",
        "tsoa": "^7.0.0-alpha.0",
        "ws": "^8.19.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.0.0",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "dotenv": "^17.3.1",
        "eslint": "^8.48.0",
        "prisma": "^7.3.0",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsx": "^4.21.0",
        "typescript": "^5.4.0",
        "vitest": "^2.0.0"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}