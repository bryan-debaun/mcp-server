{
    "name": "@bryan-debaun/mcp-server",
    "version": "0.1.0",
    "description": "Extensible MCP server for VS Code Copilot with GitHub Issues tools",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit",
        "prisma:dev": "prisma db push && prisma generate",
        "prisma:seed": "ts-node prisma/seed.ts",
        "prisma:generate": "prisma generate"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "vscode",
        "copilot",
        "github"
    ],
    "author": "bryan-debaun",
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "prom-client": "^14.0.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.0.0",
        "@types/supertest": "^2.0.12",
        "prisma": "^7.3.0",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.4.0",
        "vitest": "^2.0.0"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}
