# Copy this file to your local `.env.local` and fill the values (DO NOT COMMIT secrets)

# Spotify OAuth client credentials
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Redirect URI configured in the Spotify Developer Dashboard (must match exactly)
SPOTIFY_REDIRECT_URI=https://bad-mcp.onrender.com/oauth/callback

# Long-lived refresh token obtained from the OAuth flow
SPOTIFY_REFRESH_TOKEN=your-refresh-token

# Optional: poll interval used by the Spotify adapter (ms)
SPOTIFY_POLL_INTERVAL_MS=15000

# Optional: scopes used for OAuth (documentational)
SPOTIFY_SCOPES=user-read-playback-state user-read-currently-playing user-modify-playback-state
